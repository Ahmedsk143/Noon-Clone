{
    "name": "ecommerce-api",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start:dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
        "start": "npm run build && node ./dist/server.js",
        "dropTestdb": "db-migrate db:drop ecommercedb_test",
        "createTestdb": "db-migrate db:create ecommercedb_test",
        "test": "SET ENV=test && npm run dropTestdb && npm run createTestdb && db-migrate up --env test && npm run build && jasmine --random=false ",
        "lint": "eslint --ignore-path .eslintignore --ext .ts .",
        "format": "prettier --ignore-path .prettierignore --write \"**/*.ts\""
    },
    "author": "Ahmed Khalil",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.14",
        "@types/jasmine": "^4.3.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.0",
        "@types/pg": "^8.6.5",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "bcrypt": "^5.1.0",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jasmine-spec-reporter": "^7.0.0",
        "node-ts": "^5.1.2",
        "nodemon": "^2.0.20",
        "supertest": "^6.3.0",
        "ts-node": "^8.10.2",
        "tsc-watch": "^5.0.3",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jasmine": "^4.4.0",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.8.0"
    }
